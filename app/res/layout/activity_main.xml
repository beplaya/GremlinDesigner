<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aj.gremlindesigner.MainActivity"
    tools:ignore="MergeRootFrame" >

    <com.aj.gremlindesigner.GremlinViewer
        android:id="@+id/gremlin_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_btn_new_gremlin" />

    <Button
        android:id="@+id/main_btn_new_gremlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/new_gremlin" />

</RelativeLayout>